{
  "name": "spinach-nft-web",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.0.2",
  "author": "RaenonX",
  "license": "ISC",
  "description": "Web-related projects for Spinach NFT.",
  "engines": {
    "node": "20.x",
    "npm": "^9.5.1"
  },
  "workspaces": [
    "spinach-nft-common",
    "spinach-nft-server",
    "spinach-nft-service",
    "spinach-nft-ui"
  ],
  "scripts": {
    "g:devops": "node scripts/discord-webhook.js",
    "g:dev": "cd $INIT_CWD && nodemon",
    "g:tsc": "cd $INIT_CWD && tsc --noemit",
    "g:build:common": "cd $INIT_CWD && tsc -p .",
    "g:build:process": "cd $INIT_CWD && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "g:lint": "cd $INIT_CWD && eslint src/ --ext .ts,.tsx",
    "g:lint:fix": "cd $INIT_CWD && eslint src/ --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.30",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "env-var": "^7.4.2",
    "eslint-plugin-unused-imports": "^3.2.0",
    "mongodb": "^6.6.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pm2": "^5.3.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "date-fns": "*"
  }
}
