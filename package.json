{
  "name": "spinach-nft-web",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@4.0.2",
  "author": "Spinach-NFT",
  "license": "ISC",
  "description": "Web-related projects for Spinach NFT.",
  "engines": {
    "node": "22.x",
    "npm": "^9.5.1"
  },
  "workspaces": [
    "spinach-nft-common",
    "spinach-nft-server",
    "spinach-nft-service",
    "spinach-nft-ui",
    "spinach-nft-admin"
  ],
  "scripts": {
    "g:devops": "node scripts/discord-webhook.js",
    "g:dev": "cd $INIT_CWD && nodemon",
    "g:tsc": "cd $INIT_CWD && tsc --noemit",
    "g:build:common": "cd $INIT_CWD && tsc -p .",
    "g:build:process": "cd $INIT_CWD && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "g:lint": "cd $INIT_CWD && eslint src/ --ext .ts,.tsx",
    "g:lint:fix": "cd $INIT_CWD && eslint src/ --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@fastify/type-provider-typebox": "^4.0.0",
    "@sinclair/typebox": "^0.32.34",
    "bcryptjs": "^2.4.3",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "env-var": "^7.5.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "mongodb": "^6.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-next": "^16.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pm2": "^5.4.3",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-tailwindcss": "^0.0.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "date-fns": "*"
  }
}
