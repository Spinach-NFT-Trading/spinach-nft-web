{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    /* Basic Options */
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    /* Compiling Options */
    "outDir": "./dist",
    "lib": [
      // "Hack" to include node native `fetch`
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": false,
    "removeComments": true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    /* Strict Type-Checking Options */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./",
    "paths": {
      "@spinach/service/*": ["./src/*"],
      "@spinach/common/*": ["../spinach-nft-common/*"]
    },
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "../node_modules/**/*"
  ]
}
